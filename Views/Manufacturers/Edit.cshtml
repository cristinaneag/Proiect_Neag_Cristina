@model Proiect_Neag_Cristina.Models.Manufacturer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cui" class="control-label"></label>
                <input asp-for="Cui" class="form-control" />
                <span asp-validation-for="Cui" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>

                            @{
                                int cnt = 0;
                                List<Proiect_Neag_Cristina.Models.StoreViewModels.ManufacturedPerfumesData> perfumes = ViewBag.Perfumes;
                                foreach (var perfume in perfumes)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedPerfumes"
                                               value="@perfume.PerfumeID"
                                               @(Html.Raw(perfume.IsManufactured ? "checked=\"checked\"" : "")) />
                                        @perfume.PerfumeID @: @perfume.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
